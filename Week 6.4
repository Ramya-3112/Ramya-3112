# Read input
n = int(input().strip())  # Number of elements in the list
elements = []

for _ in range(n):
    elements.append(int(input().strip()))  # Read elements of the list

search_element = int(input().strip())  # Element to search

# Find locations of the search element and count its occurrences
locations = []
occurrences = 0

for i in range(n):
    if elements[i] == search_element:
        locations.append(i + 1)
        occurrences += 1

# Print results
if occurrences > 0:
    for location in locations:
        print(f"{search_element} is present at location {location}.")
    print(f"{search_element} is present {occurrences} times in the array.")
else:
    print(f"{search_element} is not present in the array.")
