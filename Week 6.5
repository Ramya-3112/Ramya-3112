def find_pivot_index(arr):
    total_sum = sum(arr)
    left_sum = 0
    for i in range(len(arr)):
        total_sum -= arr[i]
        if left_sum == total_sum:
            return i
        left_sum += arr[i]
    return -1

# Read input
n = int(input().strip())  # Size of the array
arr = []

# Read elements of the array
for _ in range(n):
    arr.append(int(input().strip()))

# Find and print the index of the pivot
pivot_index = find_pivot_index(arr)
print(pivot_index)
