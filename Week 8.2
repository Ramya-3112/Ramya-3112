def sort_dict_by_sum(test_dict):
    sum_dict = {key: sum(value) for key, value in test_dict.items()}

    sorted_keys = sorted(test_dict, key=lambda x: sum_dict[x])

    sorted_dict = {key: sum(test_dict[key]) for key in sorted_keys}

    return sorted_dict


def main():
    n = int(input())

    test_dict = {}

    for _ in range(n):
        data = input().split()
        key = data[0]
        values = list(map(int, data[1:]))
        test_dict[key] = values

    sorted_dict = sort_dict_by_sum(test_dict)

    for key, value in sorted_dict.items():
        print(key, value)


if __name__ == "__main__":
    main()
