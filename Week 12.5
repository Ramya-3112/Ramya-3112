def main():
    import sys
    input = sys.stdin.read
    data = input().split()
   
    X = int(data[0])
    shoe_sizes = list(map(int, data[1:X+1]))
   
    from collections import Counter
    inventory = Counter(shoe_sizes)
   
    N = int(data[X+1])
    customer_requests = data[X+2:]
   
    total_revenue = 0
   
    for i in range(N):
        size = int(customer_requests[2*i])
        price = int(customer_requests[2*i + 1])
       
        if inventory[size] > 0:
            total_revenue += price
            inventory[size] -= 1
   
    print(total_revenue)

if __name__ == "__main__":
    main()
